# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
#GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
#GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
#GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                  controllers.Assets.versioned(path="/public", file: Asset)
# Static resources (not managed by the Play framework)
#GET     /extassets/*file            controllers.Assets.versioned(path="/home/dungvc/Desktop", file: Asset)

#######################################################################

### LOGIN , LOGOUT
GET      /                             controllers.LoginController.index
GET      /login                        controllers.LoginController.login
GET      /logout                       controllers.LoginController.logout

#######################################################################

### PAGE OVERVIEW
# Tab Overview
GET     /overview                        churn.controllers.OverviewController.index
POST    /overview/getJsonOverview        churn.controllers.OverviewController.getJsonOverview
# Tab Age & Package
POST    /overview/getJsonByTab           churn.controllers.OverviewController.getJsonByTab

## COMMENT LOG
POST    /internet/pushComment            churn.controllers.OverviewController.pushComment

### PAGE CHECKLIST
GET     /checklist                       churn.controllers.ChecklistController.index
POST    /checklist/getJsonChurn          churn.controllers.ChecklistController.getJsonChurn
# Tab Region, Age, ProcessTime & Reason
POST    /checklist/getJsonByTab          churn.controllers.ChecklistController.getJsonByTab

### PAGE CALLLOG
GET     /internet/calllog                churn.controllers.ChurnCallogController.index
POST    /internet/calllog/getJsonChurn   churn.controllers.ChurnCallogController.getJsonChurn

#######################################################################