# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
#GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
#GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
#GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                  controllers.Assets.versioned(path="/public", file: Asset)
# Static resources (not managed by the Play framework)
#GET     /extassets/*file            controllers.Assets.versioned(path="/home/dungvc/Desktop", file: Asset)

#######################################################################

### LOGIN , LOGOUT
GET      /                             controllers.LoginController.index
GET      /login                        controllers.LoginController.login
GET      /logout                       controllers.LoginController.logout

#######################################################################

### SEARCH CONTRACT
GET     /churn/search                    churn.controllers.ChurnDetectController.getFormContract(contract: String)

### PAGE OVERVIEW
# Tab Overview
GET     /overview                        churn.controllers.OverviewController.index
POST    /overview/getJsonOverview        churn.controllers.OverviewController.getJsonOverview
# Tab Age
POST    /overview/getJsonByTab           churn.controllers.OverviewController.getJsonByTab

## COMMENT LOG
POST    /internet/pushComment            churn.controllers.OverviewController.pushComment
GET     /internet/getCommentByTab        churn.controllers.OverviewController.getComment(tab: String)

### PAGE REGION
GET     /internet/region                 churn.controllers.ChurnRegionController.index
POST    /internet/region/getJsonChurn    churn.controllers.ChurnRegionController.getJsonChurn

### PAGE CALLLOG
GET     /internet/calllog                churn.controllers.ChurnCallogController.index
POST    /internet/calllog/getJsonChurn   churn.controllers.ChurnCallogController.getJsonChurn

### PAGE CHECKLIST
GET     /internet/checklist              churn.controllers.ChurnChecklistController.index
POST    /internet/checklist/getJsonChurn churn.controllers.ChurnChecklistController.getJsonChurn

### PAGE DETECT PROBLEM
GET     /internet/detect                 churn.controllers.ChurnDetectController.index
POST    /internet/detect/exportCSV       churn.controllers.ChurnDetectController.exportCSV
POST    /internet/detect/getJsonChurn    churn.controllers.ChurnDetectController.getJsonChurn

#######################################################################